<h1>Listing users</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Twitter</th>
    <th>CPF</th>
    <th>Company</th>
    <th>College</th>
    <th>ITA Student?</th>
    <th>ITA Badge?</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.name %></td>
    <td><%= user.email %></td>
    <td><%= user.twitter %></td>
    <td><%= user.cpf %></td>
    <td><%= user.company %></td>
    <td><%= user.college %></td>
    <td><%= user.ita_student %></td>
    <td><%= user.ita_badge %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

